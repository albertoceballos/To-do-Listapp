<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.aac088.to_do_listapp.TaskActivity">

    <ImageView
        android:id="@+id/add_task_img_vw"
        android:layout_width="60dp"
        android:layout_height="46dp"
        android:contentDescription="@string/add_image_view"
        app:layout_constraintBottom_toTopOf="@+id/task_list_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/task_etxt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294"
        app:srcCompat="@android:drawable/ic_input_add" />

    <EditText
        android:id="@+id/task_etxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_new_todo"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/task_list_view"
        app:layout_constraintLeft_toRightOf="@+id/add_task_img_vw"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <ListView
        android:id="@+id/task_list_view"
        android:layout_width="0dp"
        android:layout_height="443dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
